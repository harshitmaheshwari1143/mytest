{
    "meta": {
        "options": {
            "linkedFile": "/views/login.ejs",
            "linkedForm": "formLogin"
        },
        "$_GET": [
            {
                "type": "text",
                "options": {
                    "rules": {
                        "core:required": {}
                    }
                },
                "name": "username"
            },
            {
                "type": "text",
                "options": {
                    "rules": {
                        "core:required": {}
                    }
                },
                "name": "password"
            },
            {
                "type": "text",
                "options": {
                    "rules": {
                        "core:required": {}
                    }
                },
                "name": "mobileno"
            },
            {
                "type": "text",
                "options": {
                    "rules": {
                        "core:required": {}
                    }
                },
                "name": "name"
            }
        ],
        "$_SERVER": [
            {
                "type": "text",
                "name": "REMOTE_ADDR"
            }
        ]
    },
    "exec": {
        "steps": {
            "name": "",
            "module": "core",
            "action": "trycatch",
            "options": {
                "try": {
                    "steps": [
                        {
                            "name": "getSalt",
                            "module": "dbconnector",
                            "action": "single",
                            "options": {
                                "connection": "postgres_gcpServer",
                                "sql": {
                                    "type": "SELECT",
                                    "columns": [
                                        {
                                            "table": "m_users",
                                            "column": "salt",
                                            "alias": "saltvalue"
                                        },
                                        {
                                            "table": "m_users",
                                            "column": "user_tpin"
                                        },
                                        {
                                            "table": "m_users",
                                            "column": "id"
                                        },
                                        {
                                            "table": "m_users",
                                            "column": "md_id"
                                        },
                                        {
                                            "table": "m_users",
                                            "column": "ds_id"
                                        }
                                    ],
                                    "table": {
                                        "name": "m_users"
                                    },
                                    "joins": [],
                                    "query": "SELECT salt AS saltvalue, user_tpin, id, md_id, ds_id\nFROM m_users\nWHERE user_type BETWEEN 1 AND 3 AND u_status = '1' AND blank2 = :P1 /* {{$_GET.username}} */",
                                    "params": [
                                        {
                                            "operator": "equal",
                                            "type": "expression",
                                            "name": ":P1",
                                            "value": "{{$_GET.username}}"
                                        }
                                    ],
                                    "wheres": {
                                        "condition": "AND",
                                        "rules": [
                                            {
                                                "id": "m_users.user_type",
                                                "field": "m_users.user_type",
                                                "type": "double",
                                                "operator": "between",
                                                "value": [
                                                    1,
                                                    3
                                                ],
                                                "data": {
                                                    "table": "m_users",
                                                    "column": "user_type",
                                                    "type": "number"
                                                },
                                                "operation": "BETWEEN"
                                            },
                                            {
                                                "id": "m_users.u_status",
                                                "field": "m_users.u_status",
                                                "type": "string",
                                                "operator": "equal",
                                                "value": "1",
                                                "data": {
                                                    "table": "m_users",
                                                    "column": "u_status",
                                                    "type": "text"
                                                },
                                                "operation": "="
                                            },
                                            {
                                                "id": "m_users.blank2",
                                                "field": "m_users.blank2",
                                                "type": "string",
                                                "operator": "equal",
                                                "value": "{{$_GET.username}}",
                                                "data": {
                                                    "table": "m_users",
                                                    "column": "blank2",
                                                    "type": "text"
                                                },
                                                "operation": "="
                                            }
                                        ],
                                        "conditional": null,
                                        "valid": true
                                    }
                                }
                            },
                            "output": false,
                            "meta": [
                                {
                                    "type": "text",
                                    "name": "saltvalue"
                                },
                                {
                                    "type": "text",
                                    "name": "user_tpin"
                                },
                                {
                                    "type": "number",
                                    "name": "id"
                                },
                                {
                                    "type": "text",
                                    "name": "md_id"
                                },
                                {
                                    "type": "text",
                                    "name": "ds_id"
                                }
                            ],
                            "outputType": "object"
                        },
                        {
                            "name": "",
                            "module": "core",
                            "action": "condition",
                            "options": {
                                "if": "{{getSalt.saltvalue}}",
                                "then": {
                                    "steps": [
                                        {
                                            "name": "GetMdt",
                                            "module": "dbconnector",
                                            "action": "single",
                                            "options": {
                                                "connection": "postgres_gcpServer",
                                                "sql": {
                                                    "type": "SELECT",
                                                    "columns": [
                                                        {
                                                            "table": "m_users",
                                                            "column": "id",
                                                            "alias": "countmdt",
                                                            "aggregate": "COUNT"
                                                        }
                                                    ],
                                                    "table": {
                                                        "name": "m_users"
                                                    },
                                                    "joins": [],
                                                    "groupBy": [],
                                                    "wheres": {
                                                        "condition": "AND",
                                                        "rules": [
                                                            {
                                                                "id": "m_users.id",
                                                                "field": "m_users.id",
                                                                "type": "double",
                                                                "operator": "equal",
                                                                "value": "{{getSalt.md_id.toNumber()}}",
                                                                "data": {
                                                                    "table": "m_users",
                                                                    "column": "id",
                                                                    "type": "number"
                                                                },
                                                                "operation": "="
                                                            },
                                                            {
                                                                "id": "m_users.u_status",
                                                                "field": "m_users.u_status",
                                                                "type": "string",
                                                                "operator": "equal",
                                                                "value": "1",
                                                                "data": {
                                                                    "table": "m_users",
                                                                    "column": "u_status",
                                                                    "type": "text"
                                                                },
                                                                "operation": "="
                                                            }
                                                        ],
                                                        "conditional": null,
                                                        "valid": true
                                                    },
                                                    "query": "SELECT COUNT(id) AS countmdt\nFROM m_users\nWHERE id = :P1 /* {{getSalt.md_id.toNumber()}} */ AND u_status = '1'",
                                                    "params": [
                                                        {
                                                            "operator": "equal",
                                                            "type": "expression",
                                                            "name": ":P1",
                                                            "value": "{{getSalt.md_id.toNumber()}}"
                                                        }
                                                    ]
                                                }
                                            },
                                            "output": false,
                                            "meta": [
                                                {
                                                    "type": "number",
                                                    "name": "countmdt"
                                                }
                                            ],
                                            "outputType": "object"
                                        },
                                        {
                                            "name": "",
                                            "module": "core",
                                            "action": "condition",
                                            "options": {
                                                "if": "{{GetMdt.countmdt > 0 || getSalt.md_id.toNumber() == 0}}",
                                                "then": {
                                                    "steps": [
                                                        {
                                                            "name": "GetDt",
                                                            "module": "dbconnector",
                                                            "action": "single",
                                                            "options": {
                                                                "connection": "postgres_gcpServer",
                                                                "sql": {
                                                                    "type": "SELECT",
                                                                    "columns": [
                                                                        {
                                                                            "table": "m_users",
                                                                            "column": "id",
                                                                            "alias": "countdt",
                                                                            "aggregate": "COUNT"
                                                                        }
                                                                    ],
                                                                    "table": {
                                                                        "name": "m_users"
                                                                    },
                                                                    "joins": [],
                                                                    "groupBy": [],
                                                                    "wheres": {
                                                                        "condition": "AND",
                                                                        "rules": [
                                                                            {
                                                                                "id": "m_users.id",
                                                                                "field": "m_users.id",
                                                                                "type": "double",
                                                                                "operator": "equal",
                                                                                "value": "{{getSalt.ds_id.toNumber()}}",
                                                                                "data": {
                                                                                    "table": "m_users",
                                                                                    "column": "id",
                                                                                    "type": "number"
                                                                                },
                                                                                "operation": "="
                                                                            },
                                                                            {
                                                                                "id": "m_users.u_status",
                                                                                "field": "m_users.u_status",
                                                                                "type": "string",
                                                                                "operator": "equal",
                                                                                "value": "1",
                                                                                "data": {
                                                                                    "table": "m_users",
                                                                                    "column": "u_status",
                                                                                    "type": "text"
                                                                                },
                                                                                "operation": "="
                                                                            }
                                                                        ],
                                                                        "conditional": null,
                                                                        "valid": true
                                                                    },
                                                                    "query": "SELECT COUNT(id) AS countdt\nFROM m_users\nWHERE id = :P1 /* {{getSalt.ds_id.toNumber()}} */ AND u_status = '1'",
                                                                    "params": [
                                                                        {
                                                                            "operator": "equal",
                                                                            "type": "expression",
                                                                            "name": ":P1",
                                                                            "value": "{{getSalt.ds_id.toNumber()}}"
                                                                        }
                                                                    ]
                                                                }
                                                            },
                                                            "output": false,
                                                            "meta": [
                                                                {
                                                                    "type": "number",
                                                                    "name": "countdt"
                                                                }
                                                            ],
                                                            "outputType": "object"
                                                        },
                                                        {
                                                            "name": "",
                                                            "module": "core",
                                                            "action": "condition",
                                                            "options": {
                                                                "if": "{{GetDt.countdt > 0 || getSalt.ds_id.toNumber() == 0}}",
                                                                "then": {
                                                                    "steps": [
                                                                        {
                                                                            "name": "identity",
                                                                            "module": "auth",
                                                                            "action": "login",
                                                                            "options": {
                                                                                "provider": "securityAndroid",
                                                                                "password": "{{$_GET.password.sha256(getSalt.saltvalue)}}",
                                                                                "username": "{{$_GET.username}}",
                                                                                "remember": ""
                                                                            },
                                                                            "output": false,
                                                                            "meta": []
                                                                        },
                                                                        {
                                                                            "name": "",
                                                                            "module": "core",
                                                                            "action": "condition",
                                                                            "options": {
                                                                                "if": "{{identity}}",
                                                                                "then": {
                                                                                    "steps": [
                                                                                        {
                                                                                            "name": "AuthCode",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "65c43ccd6a7b41c884"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text"
                                                                                        },
                                                                                        {
                                                                                            "name": "MessageCode",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "E06003"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text"
                                                                                        },
                                                                                        {
                                                                                            "name": "ReqId",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "{{UUID.md5(123456).substr(1, 15)}}"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text"
                                                                                        },
                                                                                        {
                                                                                            "name": "api",
                                                                                            "module": "api",
                                                                                            "action": "send",
                                                                                            "options": {
                                                                                                "method": "POST",
                                                                                                "url": "https://ezymoney.myezypay.in/RemitMoney/mtransfer",
                                                                                                "dataType": "x-www-form-urlencoded",
                                                                                                "data": {
                                                                                                    "msg": "{{MessageCode+'~'+AuthCode+'~'+ReqId+'~'+$_GET.mobileno+'~'+$_GET.name+'~0~0'}}"
                                                                                                }
                                                                                            },
                                                                                            "output": false
                                                                                        },
                                                                                        {
                                                                                            "name": "RemitterAdd",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "{{api.data}}"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text",
                                                                                            "output": false
                                                                                        },
                                                                                        {
                                                                                            "name": "RemName",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "{{RemitterAdd.split('~')[3]}}"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text",
                                                                                            "output": true
                                                                                        },
                                                                                        {
                                                                                            "name": "RefNo",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "{{RemitterAdd.split('~')[4]}}"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text",
                                                                                            "output": true
                                                                                        },
                                                                                        {
                                                                                            "name": "RemAddMessage",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "{{'OTP Sent: '+RemitterAdd.split('~')[5]}}"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text",
                                                                                            "output": true
                                                                                        },
                                                                                        {
                                                                                            "name": "Status",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "{{RemitterAdd.split('~')[5]}}"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text",
                                                                                            "output": false
                                                                                        },
                                                                                        {
                                                                                            "name": "RemAddStatusCode",
                                                                                            "module": "core",
                                                                                            "action": "setvalue",
                                                                                            "options": {
                                                                                                "value": "{{Status=='SUCCESS'?1:2}}"
                                                                                            },
                                                                                            "meta": [],
                                                                                            "outputType": "text",
                                                                                            "output": true
                                                                                        }
                                                                                    ]
                                                                                },
                                                                                "else": {
                                                                                    "steps": {
                                                                                        "name": "Resp",
                                                                                        "module": "core",
                                                                                        "action": "setvalue",
                                                                                        "options": {
                                                                                            "value": "Password Mismatched"
                                                                                        },
                                                                                        "meta": [],
                                                                                        "output": true,
                                                                                        "outputType": "text"
                                                                                    }
                                                                                }
                                                                            },
                                                                            "outputType": "boolean"
                                                                        }
                                                                    ]
                                                                },
                                                                "else": {
                                                                    "steps": {
                                                                        "name": "Resp",
                                                                        "module": "core",
                                                                        "action": "setvalue",
                                                                        "options": {
                                                                            "value": "Your Distributor(DT) inactive, Please contact technical support team"
                                                                        },
                                                                        "meta": [],
                                                                        "outputType": "text",
                                                                        "output": true
                                                                    }
                                                                }
                                                            },
                                                            "outputType": "boolean"
                                                        }
                                                    ]
                                                },
                                                "else": {
                                                    "steps": {
                                                        "name": "Resp",
                                                        "module": "core",
                                                        "action": "setvalue",
                                                        "options": {
                                                            "value": "Your Master Distributor(MDT) inactive, Please contact technical support team"
                                                        },
                                                        "meta": [],
                                                        "output": true,
                                                        "outputType": "text"
                                                    }
                                                }
                                            },
                                            "outputType": "boolean"
                                        }
                                    ]
                                },
                                "else": {
                                    "steps": {
                                        "name": "Resp",
                                        "module": "core",
                                        "action": "setvalue",
                                        "options": {
                                            "value": "User does not exists or user inactive, Please contact technical support team"
                                        },
                                        "meta": [],
                                        "outputType": "text",
                                        "output": true
                                    }
                                }
                            },
                            "outputType": "boolean",
                            "output": false
                        }
                    ]
                },
                "catch": {
                    "steps": {
                        "name": "Resp",
                        "module": "core",
                        "action": "setvalue",
                        "options": {
                            "value": "Do not even try to do this, we are watching & recording your wrong activity!"
                        },
                        "meta": [],
                        "output": true,
                        "outputType": "text"
                    }
                }
            }
        }
    }
}