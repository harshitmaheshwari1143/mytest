{
  "meta": {
    "options": {
      "linkedForm": "formLogin"
    },
    "$_GET": [
      {
        "type": "text",
        "options": {
          "rules": {
            "core:required": {}
          }
        },
        "name": "username"
      },
      {
        "type": "text",
        "options": {
          "rules": {
            "core:required": {}
          }
        },
        "name": "password"
      },
      {
        "type": "text",
        "options": {
          "rules": {
            "core:required": {}
          }
        },
        "name": "oldtpin"
      },
      {
        "type": "text",
        "options": {
          "rules": {
            "core:required": {},
            "core:number": {}
          }
        },
        "name": "newtpin"
      }
    ]
  },
  "exec": {
    "steps": {
      "name": "",
      "module": "core",
      "action": "trycatch",
      "options": {
        "try": {
          "steps": [
            {
              "name": "getSalt",
              "module": "dbconnector",
              "action": "single",
              "options": {
                "connection": "postgres_gcpServer",
                "sql": {
                  "type": "SELECT",
                  "columns": [
                    {
                      "table": "m_users",
                      "column": "salt",
                      "alias": "saltvalue"
                    },
                    {
                      "table": "m_users",
                      "column": "user_tpin"
                    },
                    {
                      "table": "m_users",
                      "column": "id"
                    },
                    {
                      "table": "m_users",
                      "column": "md_id"
                    },
                    {
                      "table": "m_users",
                      "column": "ds_id"
                    }
                  ],
                  "table": {
                    "name": "m_users"
                  },
                  "joins": [],
                  "query": "SELECT salt AS saltvalue, user_tpin, id, md_id, ds_id\nFROM m_users\nWHERE user_type BETWEEN 1 AND 3 AND u_status = '1' AND blank2 = :P1 /* {{$_GET.username}} */",
                  "params": [
                    {
                      "operator": "equal",
                      "type": "expression",
                      "name": ":P1",
                      "value": "{{$_GET.username}}"
                    }
                  ],
                  "wheres": {
                    "condition": "AND",
                    "rules": [
                      {
                        "id": "m_users.user_type",
                        "field": "m_users.user_type",
                        "type": "double",
                        "operator": "between",
                        "value": [
                          1,
                          3
                        ],
                        "data": {
                          "table": "m_users",
                          "column": "user_type",
                          "type": "number"
                        },
                        "operation": "BETWEEN"
                      },
                      {
                        "id": "m_users.u_status",
                        "field": "m_users.u_status",
                        "type": "string",
                        "operator": "equal",
                        "value": "1",
                        "data": {
                          "table": "m_users",
                          "column": "u_status",
                          "type": "text"
                        },
                        "operation": "="
                      },
                      {
                        "id": "m_users.blank2",
                        "field": "m_users.blank2",
                        "type": "string",
                        "operator": "equal",
                        "value": "{{$_GET.username}}",
                        "data": {
                          "table": "m_users",
                          "column": "blank2",
                          "type": "text"
                        },
                        "operation": "="
                      }
                    ],
                    "conditional": null,
                    "valid": true
                  }
                }
              },
              "output": false,
              "meta": [
                {
                  "type": "text",
                  "name": "saltvalue"
                },
                {
                  "type": "text",
                  "name": "user_tpin"
                },
                {
                  "type": "number",
                  "name": "id"
                },
                {
                  "type": "text",
                  "name": "md_id"
                },
                {
                  "type": "text",
                  "name": "ds_id"
                }
              ],
              "outputType": "object"
            },
            {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{getSalt.saltvalue}}",
                "then": {
                  "steps": [
                    {
                      "name": "GetMdt",
                      "module": "dbconnector",
                      "action": "single",
                      "options": {
                        "connection": "postgres_gcpServer",
                        "sql": {
                          "type": "SELECT",
                          "columns": [
                            {
                              "table": "m_users",
                              "column": "id",
                              "alias": "countmdt",
                              "aggregate": "COUNT"
                            }
                          ],
                          "table": {
                            "name": "m_users"
                          },
                          "joins": [],
                          "groupBy": [],
                          "wheres": {
                            "condition": "AND",
                            "rules": [
                              {
                                "id": "m_users.id",
                                "field": "m_users.id",
                                "type": "double",
                                "operator": "equal",
                                "value": "{{getSalt.md_id.toNumber()}}",
                                "data": {
                                  "table": "m_users",
                                  "column": "id",
                                  "type": "number"
                                },
                                "operation": "="
                              },
                              {
                                "id": "m_users.u_status",
                                "field": "m_users.u_status",
                                "type": "string",
                                "operator": "equal",
                                "value": "1",
                                "data": {
                                  "table": "m_users",
                                  "column": "u_status",
                                  "type": "text"
                                },
                                "operation": "="
                              }
                            ],
                            "conditional": null,
                            "valid": true
                          },
                          "query": "SELECT COUNT(id) AS countmdt\nFROM m_users\nWHERE id = :P1 /* {{getSalt.md_id.toNumber()}} */ AND u_status = '1'",
                          "params": [
                            {
                              "operator": "equal",
                              "type": "expression",
                              "name": ":P1",
                              "value": "{{getSalt.md_id.toNumber()}}"
                            }
                          ]
                        }
                      },
                      "output": false,
                      "meta": [
                        {
                          "type": "number",
                          "name": "countmdt"
                        }
                      ],
                      "outputType": "object"
                    },
                    {
                      "name": "",
                      "module": "core",
                      "action": "condition",
                      "options": {
                        "if": "{{GetMdt.countmdt > 0 || getSalt.md_id.toNumber() == 0}}",
                        "then": {
                          "steps": [
                            {
                              "name": "GetDt",
                              "module": "dbconnector",
                              "action": "single",
                              "options": {
                                "connection": "postgres_gcpServer",
                                "sql": {
                                  "type": "SELECT",
                                  "columns": [
                                    {
                                      "table": "m_users",
                                      "column": "id",
                                      "alias": "countdt",
                                      "aggregate": "COUNT"
                                    }
                                  ],
                                  "table": {
                                    "name": "m_users"
                                  },
                                  "joins": [],
                                  "groupBy": [],
                                  "wheres": {
                                    "condition": "AND",
                                    "rules": [
                                      {
                                        "id": "m_users.id",
                                        "field": "m_users.id",
                                        "type": "double",
                                        "operator": "equal",
                                        "value": "{{getSalt.ds_id.toNumber()}}",
                                        "data": {
                                          "table": "m_users",
                                          "column": "id",
                                          "type": "number"
                                        },
                                        "operation": "="
                                      },
                                      {
                                        "id": "m_users.u_status",
                                        "field": "m_users.u_status",
                                        "type": "string",
                                        "operator": "equal",
                                        "value": "1",
                                        "data": {
                                          "table": "m_users",
                                          "column": "u_status",
                                          "type": "text"
                                        },
                                        "operation": "="
                                      }
                                    ],
                                    "conditional": null,
                                    "valid": true
                                  },
                                  "query": "SELECT COUNT(id) AS countdt\nFROM m_users\nWHERE id = :P1 /* {{getSalt.ds_id.toNumber()}} */ AND u_status = '1'",
                                  "params": [
                                    {
                                      "operator": "equal",
                                      "type": "expression",
                                      "name": ":P1",
                                      "value": "{{getSalt.ds_id.toNumber()}}"
                                    }
                                  ]
                                }
                              },
                              "output": false,
                              "meta": [
                                {
                                  "type": "number",
                                  "name": "countdt"
                                }
                              ],
                              "outputType": "object"
                            },
                            {
                              "name": "",
                              "module": "core",
                              "action": "condition",
                              "options": {
                                "if": "{{GetDt.countdt > 0 || getSalt.ds_id.toNumber() == 0}}",
                                "then": {
                                  "steps": [
                                    {
                                      "name": "identity",
                                      "module": "auth",
                                      "action": "login",
                                      "options": {
                                        "provider": "securityAndroid",
                                        "password": "{{$_GET.password.sha256(getSalt.saltvalue)}}",
                                        "username": "{{$_GET.username}}",
                                        "remember": ""
                                      },
                                      "output": false,
                                      "meta": []
                                    },
                                    {
                                      "name": "",
                                      "module": "core",
                                      "action": "condition",
                                      "options": {
                                        "if": "{{identity}}",
                                        "then": {
                                          "steps": {
                                            "name": "",
                                            "module": "core",
                                            "action": "condition",
                                            "options": {
                                              "if": "{{$_GET.oldtpin == getSalt.user_tpin}}",
                                              "then": {
                                                "steps": [
                                                  {
                                                    "name": "TpinUpInner",
                                                    "module": "dbupdater",
                                                    "action": "update",
                                                    "options": {
                                                      "connection": "postgres_gcpServer",
                                                      "sql": {
                                                        "type": "update",
                                                        "values": [
                                                          {
                                                            "table": "m_users",
                                                            "column": "user_tpin",
                                                            "type": "text",
                                                            "value": "{{$_GET.newtpin}}"
                                                          }
                                                        ],
                                                        "table": "m_users",
                                                        "wheres": {
                                                          "condition": "AND",
                                                          "rules": [
                                                            {
                                                              "id": "id",
                                                              "field": "id",
                                                              "type": "double",
                                                              "operator": "equal",
                                                              "value": "{{getSalt.id}}",
                                                              "data": {
                                                                "column": "id"
                                                              },
                                                              "operation": "="
                                                            }
                                                          ],
                                                          "conditional": null,
                                                          "valid": true
                                                        },
                                                        "query": "UPDATE m_users\nSET user_tpin = :P1 /* {{$_GET.newtpin}} */\nWHERE id = :P2 /* {{getSalt.id}} */",
                                                        "params": [
                                                          {
                                                            "name": ":P1",
                                                            "type": "expression",
                                                            "value": "{{$_GET.newtpin}}"
                                                          },
                                                          {
                                                            "operator": "equal",
                                                            "type": "expression",
                                                            "name": ":P2",
                                                            "value": "{{getSalt.id}}"
                                                          }
                                                        ],
                                                        "returning": "id"
                                                      }
                                                    },
                                                    "meta": [
                                                      {
                                                        "name": "affected",
                                                        "type": "number"
                                                      }
                                                    ]
                                                  },
                                                  {
                                                    "name": "Status",
                                                    "module": "core",
                                                    "action": "setvalue",
                                                    "options": {
                                                      "value": 200
                                                    },
                                                    "meta": [],
                                                    "output": true,
                                                    "outputType": "number"
                                                  },
                                                  {
                                                    "name": "Resp",
                                                    "module": "core",
                                                    "action": "setvalue",
                                                    "options": {
                                                      "value": "T-Pin Successfully Updated to {{$_GET.newtpin}}"
                                                    },
                                                    "meta": [],
                                                    "output": true,
                                                    "outputType": "text"
                                                  }
                                                ]
                                              },
                                              "else": {
                                                "steps": {
                                                  "name": "Resp",
                                                  "module": "core",
                                                  "action": "setvalue",
                                                  "options": {
                                                    "value": "Old T-Pin Incorrect"
                                                  },
                                                  "meta": [],
                                                  "output": true,
                                                  "outputType": "text"
                                                }
                                              }
                                            },
                                            "outputType": "boolean"
                                          }
                                        },
                                        "else": {
                                          "steps": {
                                            "name": "Resp",
                                            "module": "core",
                                            "action": "setvalue",
                                            "options": {
                                              "value": "Password Mismatched"
                                            },
                                            "meta": [],
                                            "output": true,
                                            "outputType": "text"
                                          }
                                        }
                                      },
                                      "outputType": "boolean"
                                    }
                                  ]
                                },
                                "else": {
                                  "steps": {
                                    "name": "Resp",
                                    "module": "core",
                                    "action": "setvalue",
                                    "options": {
                                      "value": "Your Distributor(DT) inactive, Please contact technical support team"
                                    },
                                    "meta": [],
                                    "outputType": "text",
                                    "output": true
                                  }
                                }
                              },
                              "outputType": "boolean"
                            }
                          ]
                        },
                        "else": {
                          "steps": {
                            "name": "Resp",
                            "module": "core",
                            "action": "setvalue",
                            "options": {
                              "value": "Your Master Distributor(MDT) inactive, Please contact technical support team"
                            },
                            "meta": [],
                            "output": true,
                            "outputType": "text"
                          }
                        }
                      },
                      "outputType": "boolean"
                    }
                  ]
                },
                "else": {
                  "steps": {
                    "name": "Resp",
                    "module": "core",
                    "action": "setvalue",
                    "options": {
                      "value": "User does not exists or user inactive, Please contact technical support team"
                    },
                    "meta": [],
                    "outputType": "text",
                    "output": true
                  }
                }
              },
              "outputType": "boolean",
              "output": false
            }
          ]
        },
        "catch": {
          "steps": {
            "name": "Resp",
            "module": "core",
            "action": "setvalue",
            "options": {
              "value": "Do not even try to do this, we are watching & recording your wrong activity!"
            },
            "meta": [],
            "output": true,
            "outputType": "text"
          }
        }
      }
    }
  }
}